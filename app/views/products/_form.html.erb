<%= form_for @product do |f| %>

<div class="field form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="field form-group">
  <%= f.label :description %><br>
  <%= f.text_area :description, class: 'form-control' %>
</div>

<div class="action form-group">
  <%= f.submit %>
</div>
<% end %>
